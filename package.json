{
  "name": "codebuddies-v2",
  "version": "1.0.0",
  "license": "GNU General Public License, Version 3",
  "scripts": {
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "meteor:dev": "meteor --settings settings-development.json",
    "test:chrome": "TEST_BROWSER_DRIVER=chrome meteor test --once --driver-package meteortesting:mocha",
    "test:full-app": "TEST_BROWSER_DRIVER=chrome meteor test --full-app --once --driver-package meteortesting:mocha  --settings settings-development.json",
    "test:watch": "TEST_WATCH=1 meteor test --driver-package meteortesting:mocha --port 3100",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write --print-width 120",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.54",
    "babel-runtime": "6.26.0",
    "bcrypt": "3.0.7",
    "body-parser": "^1.15.2",
    "chrono-node": "^1.3.5",
    "faker": "4.1.0",
    "html-to-text": "^5.1.1",
    "ics": "^2.13.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "mailchimp-api": "^2.0.7",
    "md5": "^2.2.1",
    "meteor-node-stubs": "0.4.1",
    "moment": "^2.21.0",
    "moment-timezone": "^0.5.21",
    "quill": "^1.0.6",
    "quill-render": "^1.0.5",
    "twitter": "1.7.1",
    "uhr": "0.0.4"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.13.0",
    "chromedriver": "79.0.2",
    "cz-conventional-changelog": "3.1.0",
    "faker": "4.1.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.4",
    "nightmare": "3.0.2",
    "prettier": "1.19.1",
    "selenium-webdriver": "3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
